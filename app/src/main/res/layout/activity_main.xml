<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <LinearLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="2"
            android:src="@drawable/farmer" />

        <TextView
            android:id="@+id/header_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_weight="120"
            android:text="Easy Farm"
            android:textStyle="bold"
            android:fontFamily="@font/font5"
            android:textSize="35dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/chat"
            android:layout_width="70dp"
            android:layout_height="77dp"
            android:layout_weight="1"
            android:src="@drawable/chatbot" />

        <ImageView
            android:id="@+id/weather"
            android:layout_width="75dp"
            android:layout_height="79dp"
            android:layout_weight="1"
            android:src="@drawable/weather" />

        <ImageView
            android:id="@+id/crop_disease"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:src="@drawable/camera" />
        <ImageView
            android:id="@+id/market_rates"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:src="@drawable/prices" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="vertical">
        <Button
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:textSize="30dp"
            android:text="Adilabad"
            android:fontFamily="@font/font2"
            android:layout_weight="1"
            android:onClick="distData"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:textSize="30dp"
            android:fontFamily="@font/font2"
            android:text="Karimnagar"
            android:layout_weight="1"
            android:onClick="distData"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Button
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:textSize="30dp"
            android:fontFamily="@font/font2"
            android:text="Nalgonda"
            android:layout_weight="1"
            android:onClick="distData"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:textSize="30dp"
            android:fontFamily="@font/font2"
            android:text="Medak"
            android:layout_weight="1"
            android:onClick="distData"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Button
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:textSize="30dp"
            android:fontFamily="@font/font2"
            android:text="Khammam"
            android:layout_weight="1"
            android:onClick="distData"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:textSize="30dp"
            android:fontFamily="@font/font2"
            android:text="Mahabubnagar"
            android:layout_weight="1"
            android:onClick="distData"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Button
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:textSize="30dp"
            android:fontFamily="@font/font2"
            android:text="Hyderabad"
            android:layout_weight="1"
            android:onClick="distData"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:textSize="30dp"
            android:fontFamily="@font/font2"
            android:text="Nizamabad"
            android:layout_weight="1"
            android:onClick="distData"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Button
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:textSize="30dp"
            android:fontFamily="@font/font2"
            android:text="Rangareddy"
            android:layout_weight="1"
            android:onClick="distData"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:textSize="30dp"
            android:fontFamily="@font/font2"
            android:text="Warangal"
            android:layout_weight="1"
            android:onClick="distData"/>
    </LinearLayout>
</LinearLayout>